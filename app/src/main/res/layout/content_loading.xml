<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
       xmlns:tools="http://schemas.android.com/tools" xmlns:app="http://schemas.android.com/apk/res-auto"
       android:layout_width="0dp"
       android:layout_height="0dp"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintEnd_toEndOf="parent"
       app:layout_constraintTop_toTopOf="parent"
       app:layout_constraintBottom_toBottomOf="parent"
       tools:parentTag="androidx.constraintlayout.widget.ConstraintLayout">

    <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/lottieLoading"
            android:layout_width="@dimen/size_loading"
            android:layout_height="@dimen/size_loading"
            app:lottie_repeatMode="restart"
            app:lottie_loop="true"
            app:lottie_rawRes="@raw/loading_cat"
            app:lottie_autoPlay="true"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
    />

    <TextView
            android:id="@+id/textViewLoadingProducts"
            android:textAppearance="@style/Text.SemiBold.18sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="@string/loading_msg"
            app:layout_constraintStart_toStartOf="@+id/lottieLoading"
            app:layout_constraintEnd_toEndOf="@+id/lottieLoading"
            app:layout_constraintTop_toBottomOf="@+id/lottieLoading"/>

    <androidx.constraintlayout.widget.Group
            android:id="@+id/loadingGroup"
            app:constraint_referenced_ids="lottieLoading,textViewLoadingProducts"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

</merge>