<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/coordinatorLayout">

    <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/appbar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/collapsing_toolbar_height"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <com.google.android.material.appbar.CollapsingToolbarLayout
                android:id="@+id/collapsingToolbarLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fitsSystemWindows="true"
                app:collapsedTitleTextAppearance="@style/Text.Regular.16sp"
                app:contentScrim="@color/transparent"
                app:expandedTitleMarginBottom="@dimen/collapsing_toolbar_margin_bottom"
                app:expandedTitleTextAppearance="@style/Text.Regular.16sp"
                app:layout_scrollFlags="scroll|exitUntilCollapsed|snap"
                app:toolbarId="@id/toolbar">

            <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="bottom"
                    app:layout_collapseMode="parallax"
                    app:layout_collapseParallaxMultiplier="0.5">

                <androidx.viewpager.widget.ViewPager
                        android:id="@+id/viewPagerPhotos"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>

                <com.google.android.material.tabs.TabLayout
                        android:id="@+id/tabLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal|bottom"
                        app:tabBackground="@drawable/tab_selector"
                        app:tabGravity="center"
                        app:tabIndicatorHeight="0dp"
                />
            </FrameLayout>

            <androidx.appcompat.widget.Toolbar
                    android:id="@+id/toolbar"
                    android:layout_width="match_parent"
                    android:layout_height="?attr/actionBarSize"
                    android:layout_marginEnd="@dimen/normal"
                    android:background="@android:color/transparent"
                    app:layout_collapseMode="pin"/>

        </com.google.android.material.appbar.CollapsingToolbarLayout>
    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clipToPadding="false"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <ImageView
                    android:id="@+id/imageViewCircleLike"
                    android:layout_width="@dimen/product_screen_circle_size"
                    android:layout_height="@dimen/product_screen_circle_size"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginTop="@dimen/plus"
                    android:layout_marginEnd="@dimen/plus"
                    android:background="@drawable/circle_background"/>

            <ImageView
                    android:id="@+id/imageViewCircleComment"
                    android:layout_width="@dimen/product_screen_circle_size"
                    android:layout_height="@dimen/product_screen_circle_size"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/imageViewCircleLike"
                    android:layout_marginTop="@dimen/plus"
                    android:layout_marginEnd="@dimen/normal"
                    android:background="@drawable/circle_background"/>

            <ImageView
                    android:id="@+id/imageViewComment"
                    android:layout_width="@dimen/comment_size"
                    android:layout_height="@dimen/comment_size"
                    app:layout_constraintTop_toTopOf="@id/imageViewCircleComment"
                    app:layout_constraintEnd_toEndOf="@id/imageViewCircleComment"
                    android:background="@drawable/ic_comment"
                    android:backgroundTint="@color/colorAccent"
                    app:layout_constraintStart_toStartOf="@id/imageViewCircleComment"
                    app:layout_constraintBottom_toBottomOf="@id/imageViewCircleComment"/>

            <TextView
                    android:id="@+id/textViewCommentCount"
                    android:textAppearance="@style/Text.Regular.14sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toEndOf="@+id/imageViewComment"
                    android:textColor="@color/white"
                    android:background="@drawable/circle_accent_color_background"
                    android:gravity="center"
                    tools:text="6"
                    app:layout_constraintBottom_toTopOf="@+id/imageViewComment"
                    android:layout_marginTop="@dimen/large"
                    app:layout_constraintTop_toTopOf="parent"/>

            <ImageView
                    android:id="@+id/imageViewLike"
                    android:layout_width="@dimen/width_ic_like"
                    android:layout_height="@dimen/height_ic_like"
                    app:layout_constraintTop_toTopOf="@id/imageViewCircleLike"
                    app:layout_constraintEnd_toEndOf="@id/imageViewCircleLike"
                    android:background="@drawable/ic_like"
                    android:backgroundTint="@color/color_stroke_vector_asset_line"
                    app:layout_constraintStart_toStartOf="@id/imageViewCircleLike"
                    app:layout_constraintBottom_toBottomOf="@id/imageViewCircleLike"/>

            <TextView
                    android:id="@+id/textViewPrice"
                    android:textAppearance="@style/Text.SemiBold.22sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorPrimaryDark"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="@dimen/plus"
                    android:layout_marginTop="@dimen/plus"
                    tools:text="R$ 90"
            />

            <TextView
                    android:id="@+id/textViewOldPrice"
                    android:textAppearance="@style/Text.SemiBold.22sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorAccent"
                    app:layout_constraintTop_toTopOf="@id/textViewPrice"
                    app:layout_constraintStart_toEndOf="@id/textViewPrice"
                    android:layout_marginStart="@dimen/small"
                    tools:text="R$ 100"
            />

            <TextView
                    android:id="@+id/textViewDiscountAndInstallment"
                    android:textAppearance="@style/Text.Light.16sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:textColor="#5b5855"
                    tools:text="10% off em até 12x"
                    app:layout_constraintStart_toStartOf="@id/textViewPrice"
                    android:layout_marginTop="@dimen/space"
                    app:layout_constraintTop_toBottomOf="@id/textViewPrice"/>

            <TextView
                    android:id="@+id/textViewTitle"
                    android:textAppearance="@style/Text.Light.22sp"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorPrimaryDark"
                    app:layout_constraintTop_toBottomOf="@id/textViewDiscountAndInstallment"
                    app:layout_constraintStart_toStartOf="@id/textViewPrice"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginTop="@dimen/large"
                    tools:text="vestido zara florido"
            />

            <TextView
                    android:id="@+id/textViewContent"
                    android:textAppearance="@style/Text.Light.16sp"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorPrimaryDark"
                    app:layout_constraintTop_toBottomOf="@id/textViewTitle"
                    app:layout_constraintStart_toStartOf="@id/textViewPrice"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginTop="@dimen/large"
                    android:layout_marginEnd="@dimen/plus"
                    tools:text="ele ganhou nosso coração! por isso, o espaço do tênis está garantido nas nossas novidades e promete continuar fazendo todas as suas. leia mais"
            />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.coordinatorlayout.widget.CoordinatorLayout>